<% provide(:page_name, "Home") %>

<div class="center jumbotron">
  <h1>Welcome to Locamotor</h1>

  <h2>Check out our posts!</h2>

  <%= link_to "Post a Rental", '/posts/new', class: "btn btn-lg btn-primary" %>
  <%= link_to "Search Posts", '/search', class: "btn btn-lg btn-primary" %>
  <%= link_to "Request Route", '/route_requests/new', class: "btn btn-lg btn-primary" %>
  <%= link_to "View Requests", '/route_requests/index', class: "btn btn-lg btn-primary" %>
</div>

<%= will_paginate @posts %>

<% @posts.reverse_each do |post| %>
  <%= render partial: "shared/post_display", locals: {post: post} %>
<% end %>